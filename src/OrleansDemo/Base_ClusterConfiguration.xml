<?xml version="1.0" encoding="utf-8" ?>
<OrleansConfiguration xmlns="urn:orleans">
  <Globals>
    <SystemStore SystemStoreType="SqlServer"
                 DeploymentId="OrleansDemo"
                 DataConnectionString="Data Source=localhost;Initial Catalog=OrleansDemoDb;Integrated Security=True;MultipleActiveResultSets=True"
                 AdoInvariant="System.Data.SqlClient" />
    <Liveness LivenessType ="SqlServer" />
    <StatisticsProviders>
      <Provider Type="Orleans.Providers.SqlServer.SqlStatisticsPublisher"
                Name="OrleansDemoStats"
                ConnectionString="Data Source=localhost;Initial Catalog=OrleansDemoDb;Integrated Security=True;MultipleActiveResultSets=True" />
    </StatisticsProviders>
    <BootstrapProviders>
    </BootstrapProviders>
    <StorageProviders>
    </StorageProviders>
    <Application>
      <Defaults>
        <Deactivation AgeLimit="1m"/>
      </Defaults>
    </Application>
  </Globals>
  <Defaults>
    <Networking Address="" Port="11111" />
    <ProxyingGateway Address="" Port="30000" />
    <Statistics ProviderType="OrleansDemoStats" WriteLogStatisticsToTable="false"/>
  </Defaults>
</OrleansConfiguration>
